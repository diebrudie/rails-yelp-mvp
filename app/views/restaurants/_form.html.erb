<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for restaurant do |r| %>
        <%= r.input :name %>
        <%= r.input :address %>
        <%= r.input :phone_number %>
        <%= r.input :category, collection: Restaurant::CATEGORIES %>
        <%= r.button :submit, class: 'btn btn-primary mt-3'%>
      <% end %>
    </div>
  </div>
</div>
